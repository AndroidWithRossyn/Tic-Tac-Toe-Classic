<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>

        <item name="android:fontFamily">@font/baloo</item>
    </style>


    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#DC0C2653</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3B7DF7</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#888484</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#92B7C7E2</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->


        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->


        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">#3b7df8</item>

        <item name="colorControlActivated">#3b7df8</item>

    </style>


    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">

        <item name="background">@drawable/backradio</item>

        <item name="android:button">@null</item>

    </style>
</resources>